#!name=❏ 虎扑酷安
#!desc=广告拦截
#!from=Runeston

[URL Rewrite]
# 屏蔽热门搜索
^https:\/\/api\.coolapk\.com\/v\d\/search\?.*type=hotSearch - reject

[Script]
酷安去广告 = type=http-response,pattern=^https?:\/\/api.coolapk.com\/v6\/(feed\/(replyList|detail)|main\/indexV8|dataList),requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/Runeston/script/main/coolapk.js,script-update-interval=-1

[Map Local]
# 拦截开屏广告
^https://api-access\.pangolin-sdk-toutiao\.com data="https://raw.githubusercontent.com/Runeston/script/main/reject-dict.json"
# 偶尔出现
^https:\/\/pangolin\.snssdk\.com\/api\/ad\/ data="https://raw.githubusercontent.com/Runeston/script/main/reject-dict.json"
# 拦截页面广告
^https://goblin\.hupu\.com data="https://raw.githubusercontent.com/Runeston/script/main/reject-dict.json"
# 屏蔽大家都在搜
^https:\/\/games\.mobileapi\.hupu\.com\/.+\/search\/v\d\/hotkeylist data="https://raw.githubusercontent.com/Runeston/script/main/reject-dict.json"
# 去除热门话题榜(Beta)
^https:\/\/bbs\.mobileapi\.hupu\.com\/.+\/bbsallapi\/tag\/v\d\/(heatTag|weiboHeatTag) data="https://raw.githubusercontent.com/Runeston/script/main/reject-dict.json"

[MITM]
hostname = %APPEND% games.mobileapi.hupu.com, bbs.mobileapi.hupu.com, goblin.hupu.com, api-access.pangolin-sdk-toutiao.com, pangolin.snssdk.com, api.coolapk.com